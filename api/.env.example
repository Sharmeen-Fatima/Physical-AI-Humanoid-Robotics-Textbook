# Database Configuration
# For local development with Docker Compose
DATABASE_URL="postgresql://dev:dev_password@localhost:5432/chatbot_dev?schema=public"

# For production (Vercel Postgres or external provider)
# DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# JWT Secret (REQUIRED - generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-in-production-use-openssl-rand-base64-32"

# Python RAG Backend URL
# Local development
PYTHON_RAG_URL="http://localhost:8000"
# Production
# PYTHON_RAG_URL="https://your-rag-backend.railway.app"

# Google Translate API Key (REQUIRED for translation feature)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key-here"

# Environment
NODE_ENV="development"

# Server Port
PORT=3001

# CORS Allowed Origins (comma-separated for multiple origins)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# JWT Token Expiration (in seconds)
JWT_EXPIRES_IN=604800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=30

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/api.log"
